@model ShowcaseViewModel


<section id="@Model.Id" class="showcase">
    <img class="background-image" src="@Model.ShowcaseImage.ImageUrl" alt="@Model.ShowcaseImage.AltText">
    <div class="container">
        <div class="content">
            <h1>@Model.Title</h1>
            <p>@Model.Text</p>
            <a asp-controller="@Model.Link.ControllerName" asp-action="@Model.Link.ActionName" class="btn-theme-s">@Model.Link.Text</a>
            <h6>@Model.BrandsText</h6>

            <div class="brands">
                @if (Model.Brands != null)
                {
                    foreach (var brand in Model.Brands)
                    {
                        <img src="@brand.ImageUrl" alt="@brand.AltText">
                    }
                }
            </div>
        </div>
    </div>
</section>